<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Igra Življenja" Height="450" Width="800">

    <Border Padding="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Center" Grid.Column="1">
                <TextBlock Margin="0 0 0 10" FontWeight="Bold" Text="Igra življenja"/>
                
                <!--Število vrstic-->
                <TextBlock Margin="0 0 0 2" Text="Število vrstic"/>
                <TextBox Padding="2" TextAlignment="Center"/>

                <!--Število stolpcev-->
                <TextBlock Margin="0 10 0 2" Text="Število stolpcev"/>
                <TextBox Padding="2" TextAlignment="Center"/>

                <Button Margin="0 10 0 0" Content="Potrdi"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>
